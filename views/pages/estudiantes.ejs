<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('../includes/head') %>
  </head>
  <body style="background: linear-gradient(135deg, #1e3c72, #2a5298); color: white; font-family: Arial, sans-serif;">
    <%- include('../includes/header') %>

    <div class="container" style="margin-top: 80px !important">
      <div class="row justify-content-md-center mb-4">
        <div class="col-md-12 text-center">
          <h2 class="title" style="font-weight: bold; text-shadow: 2px 2px 4px rgba(185, 21, 21, 0.2);font-size: 50px; color:aliceblue">
            Crud Completo con NodeJS, Express y MySQL
          </h2>
          <hr style="border-color: rgba(255, 255, 255, 0.5);">
        </div>
      </div>

      <div class="row justify-content-md-center mb-4">
        <div class="col-md-4 p-4" style="background: rgba(255, 255, 255, 0.1); border-radius: 15px; backdrop-filter: blur(10px); box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);">
          <h3 class="text-center" style="color: white;">Registrar Estudiante</h3>
          <hr style="border-color: rgba(255, 255, 255, 0.5);">
          <form action="/estudiantes" method="POST">
              <div class="mb-3">
                <label class="form-label">Alumno</label>
                <input type="text" name="nombre_alumno" class="form-control" style="border-radius: 10px; padding: 10px;">
              </div>
              <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="email_alumno" class="form-control" style="border-radius: 10px; padding: 10px;">
              </div>
              <div class="mb-3">
                <label>Curso</label>
                <select name="curso_alumno" class="form-select" style="border-radius: 10px; padding: 10px;">
                  <option value="">Seleccionar el curso</option>
                  <option value="Python">Python</option>
                  <option value="NodeJS">NodeJS</option>
                  <option value="PHP">PHP</option>
                  <option value="JavaScript">JavaScript</option>
                </select>
              </div>
              <div class="d-grid">
                <button class="btn btn-warning" type="submit" style="padding: 12px; font-size: 18px; border-radius: 10px;">Registrar Estudiante</button>
              </div>
          </form>
        </div>

        <div class="col-md-8 py-3">
          <h3 class="text-center">Lista de Estudiantes</h3>
          <hr style="border-color: rgba(255, 255, 255, 0.5);">
          <div class="table-responsive">
            <table class="table table-dark table-hover text-center" style="border-radius: 10px; overflow: hidden;">
              <thead class="table-light text-dark">
                <tr>
                  <th>Id</th>
                  <th>Alumno</th>
                  <th>Email</th>
                  <th>Curso del Alumno</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% let contador = 1; %>
                <% estudiantes.forEach(function(estudiante) { %>
                <tr>
                  <th scope="row"><%= contador %></th>
                  <td><%= estudiante.nombre_alumno %></td>
                  <td><%= estudiante.email_alumno %></td>
                  <td><%= estudiante.curso_alumno %></td>
                  <td class="d-flex justify-content-center gap-2">
                    <a class="btn btn-info" href="/detalles/<%= estudiante.id_estudiante %>" title="Ver Detalles"><i class="bi bi-person-bounding-box"></i></a>
                    <a class="btn btn-success" href="/formulario-actualizar-estudiante/<%= estudiante.id_estudiante %>" title="Editar"><i class="bi bi-pencil-square"></i></a>
                    <form action="/borrar-estudiante/<%= estudiante.id_estudiante %>" method="POST">
                      <input type="hidden" name="_method" value="DELETE" />
                      <button type="submit" class="btn btn-danger" title="Eliminar"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                        <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"/>
                      </svg></button>
                     
                    </form>
                  </td>
                </tr>
                <% contador++; %>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <%- include('../includes/scripts') %>
</body>

</html>
